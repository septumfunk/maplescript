{
    "version": 8,
    "configurePresets": [
        {
            "name": "debug",
            "displayName": "Debug (Clang)",
            "description": "Uses Ninja & Clang",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/debug/${presetName}"
            }
        }
    ]
}